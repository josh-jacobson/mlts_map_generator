<p id="notice"><%= notice %></p>

<h1>Listing Screenings</h1>

<table>
  <thead>
    <tr>
      <th>Date and time</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @screenings.each do |screening| %>
      <tr>
        <td><%= screening.date_and_time %></td>
        <td><%= screening.address %></td>
        <td><%= screening.latitude %></td>
        <td><%= screening.longitude %></td>
        <td><%= link_to 'Show', screening %></td>
        <td><%= link_to 'Edit', edit_screening_path(screening) %></td>
        <td><%= link_to 'Destroy', screening, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

